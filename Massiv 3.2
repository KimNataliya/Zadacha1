//Дан одномерный массив из 8 элементов. Заменить все элементы массива меньшие 15 их удвоенными значениями. Вывести на экран монитора преобразованный массив.
using System;

namespace _15
{
    class Program
    {
        static void Main(string[] args)
        {
            var n = 8;
            var array = Array.ConvertAll(Console.ReadLine().Split(' '), s => int.Parse(s));
            Console.WriteLine("Преобразованный массив: ");
            
            for (int i = 0; i < n; i++)
            {
                if (array[i] < 15)
                {
                    Console.Write(array[i] * array[i] + " ");
                }
                else Console.Write(array[i] + " ");
            }
            
        }
    }
}
